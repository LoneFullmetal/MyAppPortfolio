<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.treyjacobsen.myappportfolio.MainActivity"
    android:background="#ffffff">

    <TextView
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps!"
        android:typeface="sans"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POPULAR MOVIES"
        android:id="@+id/btnPopularMovies"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:textColor="#ffffff"
        android:background="#000a75"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:onClick="clicker" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STOCK HAWK"
        android:id="@+id/btnStockHawk"
        android:textColor="#ffffff"
        android:background="#000a75"
        android:layout_below="@+id/btnPopularMovies"
        android:layout_alignLeft="@+id/btnPopularMovies"
        android:layout_alignStart="@+id/btnPopularMovies"
        android:layout_alignRight="@+id/btnPopularMovies"
        android:layout_alignEnd="@+id/btnPopularMovies"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:onClick="clicker" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:id="@+id/btnBuildItBigger"
        android:textColor="#ffffff"
        android:background="#000a75"
        android:layout_below="@+id/btnStockHawk"
        android:layout_alignLeft="@+id/btnStockHawk"
        android:layout_alignStart="@+id/btnStockHawk"
        android:layout_alignRight="@+id/btnStockHawk"
        android:layout_alignEnd="@+id/btnStockHawk"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:onClick="clicker" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAKE YOUR APP MATERIAL"
        android:id="@+id/btnMakeYourAppMaterial"
        android:textColor="#ffffff"
        android:background="#000a75"
        android:layout_below="@+id/btnBuildItBigger"
        android:layout_alignRight="@+id/btnBuildItBigger"
        android:layout_alignEnd="@+id/btnBuildItBigger"
        android:layout_alignLeft="@+id/btnBuildItBigger"
        android:layout_alignStart="@+id/btnBuildItBigger"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:onClick="clicker" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO UBIQUITOUS"
        android:id="@+id/btnGoUbiquitous"
        android:textColor="#ffffff"
        android:background="#000a75"
        android:layout_below="@+id/btnMakeYourAppMaterial"
        android:layout_alignLeft="@+id/btnMakeYourAppMaterial"
        android:layout_alignStart="@+id/btnMakeYourAppMaterial"
        android:layout_alignRight="@+id/btnMakeYourAppMaterial"
        android:layout_alignEnd="@+id/btnMakeYourAppMaterial"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:onClick="clicker" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAPSTONE"
        android:id="@+id/btnCapstone"
        android:textColor="#ffffff"
        android:background="#000a75"
        android:layout_below="@+id/btnGoUbiquitous"
        android:layout_alignLeft="@+id/btnGoUbiquitous"
        android:layout_alignStart="@+id/btnGoUbiquitous"
        android:layout_alignRight="@+id/btnGoUbiquitous"
        android:layout_alignEnd="@+id/btnGoUbiquitous"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="50dp"
        android:onClick="clicker" />
</RelativeLayout>
